<Window x:Class="OoTxMM_Track.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Name="_window"
        Title="OoTxMM Tracker" Height="720" Width="1280">
    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="1.25" ScaleY="1.25" CenterX=".5" CenterY=".5" />
        </Grid.LayoutTransform>
        <TabControl SelectedIndex="0" ItemsSource="{Binding ElementName=_window, Path=Tabs, Mode=TwoWay}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Header}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TabControl SelectedIndex="{Binding Path=Index}" Grid.Row="0" ItemsSource="{Binding Path=Region}" TabStripPlacement="Left" >
                            <TabControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Header}" />
                                </DataTemplate>
                            </TabControl.ItemTemplate>
                            <TabControl.ContentTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding Path=Check}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="{Binding Path=Name}" IsChecked="{Binding Path=IsChecked,Mode=TwoWay}" FontSize="12"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </TabControl.ContentTemplate>
                        </TabControl>
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Button Width="100" x:Name="Save" Content="Save" Click="Save_Click"></Button>
                            <Button Width="100" x:Name="Reset" Content="Reset" Click="Reset_Click"></Button>
                        </StackPanel>
                        <TextBlock Grid.Row="1"  HorizontalAlignment="Right" Text="{Binding Path=Content}" />
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
